<modules>
    <software>
        <module type="echoer.py">
            <description>Repeatedly outputs a given string</description>
            <parameter name="~rate" />
            <output name="output" />
            <service name="change_msg" />
        </module>
        <module type="on_off_control.py">
            <description>Performs simple on/off control given a sensor reading and a set point</description>
            <parameter name="~default_set_point" />
            <input name="set_point" />
            <input name="measured" />
            <output name="state" />
        </module>
        <module type="persistence.py">
            <description>Listens to topics on the environment and writes their data to CouchDB</description>
        </module>
        <module type="recipe_handler.py">
            <description>Runs recipes and outputs set points for the environment</description>
            <service name="start_recipe" />
            <service name="stop_recipe" />
        </module>
    </software>
    <firmware>
    </firmware>
</modules>
